#diamond star pattern
n=int(input("Enter diamonds height:"))
for i in range(n):
    for j in range(n-i-1):
        print("",end="")        
    for j in range(2*i+1):
        print("*",end="")
    print() 
n = int(input("Enter diamonds height:"))
for i in range(n-i-1):
    for j in range(i+1):
        print("",end="")
for i in range(i+1):
    for j in range(n-i-1):
        print("",end="")



